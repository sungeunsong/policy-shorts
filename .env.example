# OpenAI (AI Rank 모드에서만 사용)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_MAX_CONCURRENCY=2
OPENAI_TIMEOUT_MS=30000

# Runtime
WINDOW_HOURS=24
FETCH_CONCURRENCY=3
MAX_ITEMS_PER_SOURCE=50
USER_AGENT=policy-shorts-hunter/0.1

# DB (Neon PostgreSQL)
# Neon 대시보드 → Connection Details → Connection string (pooled)
DATABASE_URL="postgresql://user:password@ep-xxx.neon.tech/neondb?sslmode=require&pgbouncer=true&connect_timeout=15"
# Neon 대시보드 → Connection Details → Direct connection string (non-pooled)
DIRECT_URL="postgresql://user:password@ep-xxx.neon.tech/neondb?sslmode=require"
